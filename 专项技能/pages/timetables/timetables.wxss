/* pages/schooltimetables/schooltimetables.wxss */
.topBar{
    position: relative;
    background-color: #38ceb1;
    width: 100%;
    color: white;
    font-family: '微软雅黑';
    font-weight: 200;
}
.topBar .whichDate{
    display: inline-block;
    padding: 0px 0rpx 10rpx 20rpx;
    font-size: 70rpx;
}
.topBar .whichYear{
    display: inline-block;
    vertical-align: top;
    padding-top: 15rpx;
    font-size: 28rpx;
}
.topBar .nongliDetail{
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
}
.monthBox{
    widows: 100%;

}
.weekDay{
    display: flex;
    flex-grow: 1;
}
.weekDay .week{
    display: flex;
    width: 200rpx;
    margin-top: 50rpx;
    margin-bottom: 30rpx;
    justify-content: center;
    font-family:Arial, Helvetica, sans-serif;
}
.monthDay{
    width: 96%;
    padding: 0 2%;
}
.monthDay .tr{
    width: 100%;
    display: flex;
    flex-grow: 1;
}
.monthDay .tr .day{
    display: block;
    width: 200rpx;
    height: 80rpx;
    padding-top: 10rpx;
    border-radius: 5px;
    margin-top: 5px;
    margin-bottom: 5rpx;
    text-align: center;
    color: #999;
    border: 1rpx solid white;
}
.monthDay .tr .day.hideDayInfo{
    border: 1rpx solid white;
}
.monthDay .tr .day.showDayInfo{
    border:1rpx solid #8D91FF;
}
.monthDay .tr .today{
    background-color: #8D91FF;
    color:white;
}
.monthDay .tr .day .gongli{
    display: block;
    font-family:Arial, Helvetica, sans-serif;
}
.monthDay .tr .day .nongli{
    display: block;
    font-family: "微软雅黑";
    font-weight: 200;
    font-size: 20rpx;
    text-align: center;
}
