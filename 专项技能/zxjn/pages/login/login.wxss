/*login.wxss*/

.login {
  flex-direction: column;
  overflow: hidden;
}

.login-item {
  text-align: center;
}

.login-item-img {
  width: 543rpx;
  height: 128rpx;
  margin-top: 180rpx;
  margin-bottom: 30rpx;
}

.login-item-section {
  background: white;
  width: 100%;
}

.login-item-section .login-item-input {
  background: white;
  padding: 12rpx auto 12rpx auto;
  font-size: 18px;
}

.login-item-input {
  height: 120rpx;
  border-bottom: 1rpx solid rgba(136, 136, 136, 0.6);
}

.login-item-button {
  text-align: center;
  width: 600rpx;
  margin: 50rpx auto 20rpx auto;
}

.login-button {
  margin-top: 15rpx;
  font-size: 18px;
}

.error-msg {
  color: red;
}

/** 修改button默认的点击态样式类**/

.button-hover {
  background-color: red;
}

/** 添加自定义button点击态样式类**/

.other-button-hover {
  background-color: blue;
}

.divline {
  margin-top: 15rpx;
  background: #f3f3f3;
  width: 100%;
  height: 5rpx;
}

.toastview {
  height: 70rpx;
  width: 100%, ;
  background: #f0f2f5;
}
