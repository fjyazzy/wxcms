.top{
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}
.nickname{
  margin-bottom: 10rpx;
  text-align: center;
}
.item{
  height: 70rpx;
  background-color: #fff;
  margin: 20rpx;
  display: flex;
  border-radius: 20rpx;
  border-bottom: 1px solid #E5E5E5;
}
.left{
  display: flex;
  justify-content: flex-start;
  flex-grow: 1;
}
.right{
  display: flex;
  justify-content: flex-end;
  flex-grow: 1;
  color: #ccc;
  margin-right: 20rpx;
}
.nav {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: rgb(126, 118, 118);  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.top {  
  overflow:hidden;  
  display: block;  
  width: 180rpx;  
  height: 180rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
