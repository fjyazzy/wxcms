/* pages/orders/orders.wxss */
/*图片大小自适应*/
image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  display: block;
}
.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}
page {
  min-height: 100%;
  background-color: #e4e4e4;
}
/*清除浮动样式*/
.clearfix {
  zoom: 1;
  clear: both;
}
.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}
.ml30 {
  margin-left: 30rpx;
}
.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #999;
}
.hidden {
  display: none;
}


.nearCard-fl {
  width: 40%;
  float: left;
}
.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}
.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%;
  margin-top: 15rpx;
  color: #999;
}
.nearCard-fr text {
  font-size: 22rpx;
}
.down {
  background-color: #efefef;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20rpx;
}
.down view {
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}
.feedBack {
  text-align: center;
  background-color: #eecfbd;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10rpx;
  padding: 5rpx 0;
  margin: 10rpx 0 0 0;
}