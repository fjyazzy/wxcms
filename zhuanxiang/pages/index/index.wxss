/**index.wxss**/
.tr {
  margin:0px;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
  width:33.3%;
  justify-content: center;
  text-align: center;
  margin:0px;
}
.guanggao{
  margin-top: 20px;
  width: 100%;
  height: 170px;
}
.guanggao image{
  width: 100%;
  height: 170px;
}
.foot{
  width: 100%;
  height: 55px;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20px;
  margin-bottom: 10px;
}
.foot>a>image{
  width: 78px;
  height: 50px;
}
.foot>a{
  width: 78px;
  height: 55px;
}
/* components/nav/nav.wxss */
.navimage{
  width: 100%;
  height: 110px;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20px;
}
.navimage>a>image{
  width: 78px;
  height: 50px;
}
.navimage>a{
  width: 78px;
  height: 55px;
  border: 1px solid #ccc;
}
.navimage>a:hover{
  background: skyblue;
}