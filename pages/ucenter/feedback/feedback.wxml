<view class="container">

  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      <view class="fb-type">
        <view class="type-label">{{array[index]}}</view>
        <image class="type-icon" src="/images/more/down-thin.png"></image>

      </view>
    </view>
  </picker>
  <view class="fb-body">
    <textarea class="content" placeholder="对我们网站、商品、服务，你还有什么建议吗？请告诉我们..." />
    <view class="text-count">0/500</view>
  </view>
  <view class="fb-mobile">
    <view class="label">手机号码</view>
    <view class="mobile-box">
      <input class="mobile" maxlength="20" placeholder="方便我们与你联系" type='number' value="{{inputTxt}}" confirm-type ="send">
      </input>
      <image class="clear-icon" src="/images/more/del.png"></image>
      <button class='clear-btn' plain="true" hover-class="none" bindtap="clearMobileNumber">
      </button>
      
    </view>
  </view>

  <button class="fb-btn">提交</button>
</view>